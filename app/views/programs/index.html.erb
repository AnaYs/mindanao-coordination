<div id="heading">
  <h1>Programs in Mindanao</h1>
</div>

<div class="col-md-6">
  <% if @results.empty? %>
    <h4>Sorry, there were no results for your query.</h4>
  <% end %>

  <% @programs.each do |program| %>

    <%= link_to program_path(program) do %>
      <h2> <%= program.name %></h2>
    <% end %>
    <p> <%= program.main_office %></p>

  <% end %>

  <% if @projects.present? %>
    <h2> Relevant Projects: </h2>
    <% @projects.each do |project| %>
      <%= link_to program_project_path(project.program, project) do %>
        <h3> <%= project.name %></h3>
      <% end %>
      <p> Program: <%= project.program.name %> </p>
      <p> <%= project.main_office %></p>
    <% end %>
  <% end %>

  <% if @users.present? %>
    <h2> Users: </h2>
    <% @users.each do |user| %>
      <%= link_to user_path(user) do %>
        <h3> <%= user.fullname %></h3>
      <% end %>
      <p> Program: <%= user.program.name %> </p>
      <p> Organisation: <%= user.program.organisation %> </p>
      <p> Expertise: <%= user.expertise %></p>
    <% end %>
  <% end %>

  <%= link_to 'add your program', new_program_path %>
</div>

<%= render "shared/map", :markers => @hash %>

